<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!-- Any attributes here apply to the actual SQL
	table. If you don't include them, the name will
	be assumed off of the class name and attributes -->
	<class name="com.revature.models.Flower" table="Flower">
	
		<meta attribute="class-description">
			This is a table about Flowers!
		</meta>
		
		<!-- 'name' attribute correlates to the Java variable
			'type' will let Hibernate know what to convert the 
			SQL type into for Java. -->
		<!-- id tag is for your Primary Key -->
		<id name="id" type="int" column="f_id">
			<generator class="native">
				<param name="sequence">FLOWER_SEQ</param>
			</generator>
		</id>
		
		<property name="species" type="string" not-null="true" />
		<property name="petals" type="int" />	
	</class>
</hibernate-mapping>